#version 400 core
layout (location = 0) in vec3 position;
uniform vec3 camCoord;
uniform mat4 camera;
uniform mat4 projection;
out vec4 kek;
out vec2 texCoord;
void main()
{
	texCoord = vec2(position.z, 1 - position.y);
	kek = camera * vec4(position, 1.0f);
	kek = kek - vec4(camCoord, 0.0f);
	gl_Position = projection * kek;
	kek = vec4(position, 1.0f);
}
